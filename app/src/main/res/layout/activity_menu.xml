<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true" ><![CDATA[
    tools:context="com.example.deltager.pointlessclicker.menuActivity">

    ]]>

    <EditText
        android:id="@+id/textAddAdjective"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Example: a fussy"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <EditText
        android:id="@+id/textAddNoun"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginBottom="179dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Example: monkey"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAddAdjective"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/addAdjectiveButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:onClick="addAdjectiveToList"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/textAddAdjective"
        app:layout_constraintLeft_toRightOf="@+id/textAddAdjective"
        app:layout_constraintTop_toTopOf="@+id/textAddAdjective"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addSubstantivButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="addSubstantivToList"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/textAddNoun"
        app:layout_constraintLeft_toRightOf="@+id/textAddNoun"
        app:layout_constraintTop_toTopOf="@+id/textAddNoun"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Insert word: Substantive"
        app:layout_constraintBottom_toTopOf="@+id/textAddNoun"
        app:layout_constraintHorizontal_bias="0.096"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Insert word: Adjective"
        app:layout_constraintBottom_toTopOf="@+id/textAddAdjective"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
