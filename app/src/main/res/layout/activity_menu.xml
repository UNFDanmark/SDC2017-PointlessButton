<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true" >
    tools:context="com.example.deltager.pointlessclicker.menuActivity">

    <EditText
        android:id="@+id/textAddAdjective"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Add Adjective:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.161"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textAddNoun"
        android:layout_width="239dp"
        android:layout_height="47dp"
        android:layout_marginBottom="179dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Add noun:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAddAdjective"
        app:layout_constraintVertical_bias="0.08" />

    <Button
        android:id="@+id/addAdjectiveButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:onClick="addAdjectiveToList"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/textAddAdjective"
        app:layout_constraintLeft_toRightOf="@+id/textAddAdjective"
        app:layout_constraintTop_toTopOf="@+id/textAddAdjective"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/addSubstantivButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:onClick="addSubstantivToList"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/textAddNoun"
        app:layout_constraintLeft_toRightOf="@+id/textAddNoun"
        app:layout_constraintTop_toTopOf="@+id/textAddNoun"
        app:layout_constraintVertical_bias="0.888" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:onClick="back"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="236dp"
        tools:layout_editor_absoluteY="510dp" />

</android.support.constraint.ConstraintLayout>
